    "fs": "0.0.1-security",
    "helmet": "^7.1.0",
    "md5": "^2.1.0",
    "path": "^0.12.7",
    "sequelize": "^6.28.0",
    "sequelize-cli": "^6.5.2"
  },
  "devDependencies": {
